{
  "compilerOptions": {
      "forceConsistentCasingInFileNames": true,
      "module": "commonjs",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "outDir": "./build",
      "rootDir": "./",
      "target": "es6",
      "sourceMap": true,
      "skipLibCheck": true,
      "strict": true,
      "composite": true,
      "resolveJsonModule": true,
      "baseUrl": ".",
      "paths": {
        "@controllers/*": ["./controllers/*"],
        "@routes/*": ["./routes/*"],
        "@interfaces/*": ["./controllers/interfaces/*"],
        "@configs/*": ["./config/*"]
      }
  },
  "include": [
    "./**/*"
  ]
}